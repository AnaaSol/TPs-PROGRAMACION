@app.route("/reclamos_pendientes", methods=['GET', 'POST'])
def pendientes():
    reclamos_pendientes=[]
    if request.method == 'POST':
        user=request.form["username"]
    try:
        reclamos_pendientes = GestorDB.get_reclamos_by_filtro("estado", "pendiente")
    except Exception as e:
        condicion=str(e) #No se encontraron reclamos
    return render_template("reclamos_pendientes.html", reclamos_pendientes=reclamos_pendientes)

@app.route("/reclamos_usuario", methods=['GET', 'POST'])
def reclamos_user():
    condicion=""
    reclamos=[]
    if request.method == 'POST': #post que viene desde /usuario, ¿qué pasa con el que redirecciona desde /reclamos_usuario?
        user=request.form["username"]
        ID_user=GestorDB.get_dato_user(user, "ID") #no va a lanzar excepción porque user existe y ID es un atributo 
        try:
            reclamos_data=GestorDB.get_reclamos_by_filtro("usuario", ID_user) 
        except Exception as e:
            condicion=str(e) #no se encontraron reclamos, es decir, user no creó ninguno todavía
        else:
            reclamos=GestorR.cargar_de_db(reclamos_data)
    return render_template("reclamos_usuario.html", condicion=condicion,  reclamos=reclamos, user=user)

